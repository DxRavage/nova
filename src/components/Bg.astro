---
import background from "../assets/background.svg";
---

<div id="container">
  <img id="background" src={background.src} alt="" fetchpriority="high" />
</div>
<style>
  #background {
    position: fixed;
    background-repeat: repeat;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }

  main {
    height: 100%;
    display: flex;
    justify-content: center;
  }
</style>
